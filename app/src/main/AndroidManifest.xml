<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.restaurantmate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.AppActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.CookerActivity" />
        <activity android:name=".Activity.TableActivity" />
        <activity android:name=".Activity.FoodActivity" />
        <activity android:name=".Activity.CustomerActivity" />
        <activity android:name=".Activity.OrderActivity" />
        <activity android:name=".Activity.DashBoardOrderActivity" />
        <activity android:name=".Activity.SaveImageActivity" />
        <activity android:name=".Activity.ShowImageActivity"></activity>
    </application>

</manifest>